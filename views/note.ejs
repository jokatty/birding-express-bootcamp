<%- include('partials/header', {title: 'note'}); %>
  <div class="container">
    <div class="row">
      <div class="col d-flex justify-content-center">
        <h1 >Field notes</h1>
      </div>
    </div>
  </div>

<form action="/note" method="POST">
  <div class="form-row mt-5">
    <div class="form-group col-md-6">
      <label for="habitat">Habitat</label>
      <input type="text" class="form-control" id="habitat" name="habitat"/>
    </div>
    <div class="form-group col-md-6">
      <label for="flock-size">Flock Size</label>
      <input type="number" class="form-control" id="flock-size"  name="flock"/>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="date">Date</label>
      <input type="date" class="form-control" id="date" name="date" />
    </div>
    <div class="form-group col-md-4">
      <label for="time">Time</label>
      <input id="time" type="time" class="form-control"  name="time"/>
    </div>
    <div class="form-group col-md-2">
      <label for="day">Day</label>
      <input type="text" class="form-control" id="day" name="day"/>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <label for="behaviour">Behaviour</label>
      <textarea class="form-control" id="behaviour" name="textarea"/></textarea>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include('partials/footer') %>
